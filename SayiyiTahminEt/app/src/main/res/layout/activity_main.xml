<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zengin.sayiyitahminet.MainActivity"
    android:background="@android:color/holo_purple">



    <TextView
        android:text="TAHMİN ET"
        android:layout_width="match_parent"
        android:id="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_height="54dp"
        android:textStyle="normal|bold"
        android:textSize="36sp"
        android:paddingStart="80dp"
        android:textColor="@android:color/black" />

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/resim"
        android:id="@+id/imageView"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.38" />

    <Button
        android:text="BAŞLA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonbasla"
        android:onClick="tiklendi"
        android:background="@android:color/holo_green_dark"
        android:layout_weight="0.34"
        android:textSize="40sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <TextView
        android:text="0-10 arasında bir üst sınır belirle ve sayıları üret buttonuna basarak 2 sayı üret.Üst sınır dahilinde üretilen bu ilk iki sayı haricinde bir sayı tahmin et ve tahmin kısmına yaz.Doğru tahmin edebilmen için 5 hakkın var."
        android:layout_width="match_parent"
        android:id="@+id/textView5"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:paddingBottom="20dp"
        android:paddingEnd="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
